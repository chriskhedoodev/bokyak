doctype html 
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css' rel='stylesheet')
        link(href='/css/main.css' rel='stylesheet')
        title Bokyak
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href='#') Navbar
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNavAltMarkup.collapse.navbar-collapse
                .navbar-nav
                    a.nav-item.nav-link.active(href='#')
                        | Home 
                        span.sr-only (current)
                    a.nav-item.nav-link(href='#') Features
                    a.nav-item.nav-link(href='#') Pricing
                    a.nav-item.nav-link.disabled(href='#') Disabled

        h1 Newsfeed
        p Your unique User ID is #{userId}

        form(action="/auth/logout", method="POST")
            input(type="submit", value="Logout")

        br

        .container
            .comments-container
                h5 #{post.content}
                h6.text-secondary #{post.timeSince}

                form(action="/feed", method="POST")
                    input(type="textarea" name="content" placeholder="Got a reply?")
                    input(type="submit" value="Post")

                hr

                table.table
                    tbody
                        tr
                            td.col-4.like-square
                                h3 5
                            td.col-8
                                h4 6


                .row
                    .col-4.like-square
                        if !post.currentUserLikesPost
                            form(action='/feed/' + post.postId + '/like' method='POST')
                                input(type="hidden" name="userId" value=userId)
                                button.btn(type='submit')
                                    i.h3.bi.bi-hand-thumbs-up
                        else
                            form(action='/feed/' + post.postId + '/like' method='POST')
                                input(type="hidden" name="userId" value=userId)
                                button.btn(type='submit')
                                    i.h3.bi.bi-hand-thumbs-up-fill

                        h3 #{post.score}

                        if !post.currentUserDislikesPost
                            form(action='/feed/' + post.postId + '/dislike' method='POST')
                                input(type="hidden" name="userId" value=userId)
                                button.btn(type='submit')
                                    i.h3.bi.bi-hand-thumbs-down
                        else
                            form(action='/feed/' + post.postId + '/dislike' method='POST')
                                input(type="hidden" name="userId" value=userId)
                                button.btn(type='submit')
                                    i.h3.bi.bi-hand-thumbs-down-fill
            
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')