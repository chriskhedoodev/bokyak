doctype html 
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css' rel='stylesheet')
        link(href='/css/main.css' rel='stylesheet')
        title Bokyak
    body
        h1 Newsfeed
        p Your unique User ID is #{userId}

        form(action="/auth/logout", method="POST")
            input(type="submit", value="Logout")

        br

        form(action="/feed", method="POST")
            input(type="textarea" name="content" placeholder="What's on your mind?")
            input(type="hidden" name="userId" value=userId)
            input(type="submit" value="Post")

        br
        each post in posts
            .container
                .row.post-container
                    .col-4.like-square
                        if !post.currentUserLikesPost
                            form(action='/feed/' + post.postId + '/like' method='POST')
                                input(type="hidden" name="userId" value=userId)
                                button.btn(type='submit')
                                    i.h3.bi.bi-hand-thumbs-up
                        else
                            form(action='/feed/' + post.postId + '/like' method='POST')
                                input(type="hidden" name="userId" value=userId)
                                button.btn(type='submit')
                                    i.h3.bi.bi-hand-thumbs-up-fill

                        h1 #{post.score}

                        if !post.currentUserDislikesPost
                            form(action='/feed/' + post.postId + '/dislike' method='POST')
                                input(type="hidden" name="userId" value=userId)
                                button.btn(type='submit')
                                    i.h3.bi.bi-hand-thumbs-down
                        else
                            form(action='/feed/' + post.postId + '/dislike' method='POST')
                                input(type="hidden" name="userId" value=userId)
                                button.btn(type='submit')
                                    i.h3.bi.bi-hand-thumbs-down-fill


                        //- button.btn(type='submit')
                        //-     i.bi.bi-hand-thumbs-down
                    .col-8.post-content
                        | #{post.content}
                        .post-date
                            | #{post.timeSince}
                .post-divider

        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')